    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "der die das",
            "url": "http://localhost/",
            "webRoot": "${workspaceFolder}/dist",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMapPathOverrides": {
                "../src/*": "${workspaceFolder}/src/*",
            },
            "trace": true, // Optional: Helps debug source map issues
            "preLaunchTask": "tsc: build - tsconfig.json",
        },
    ]
}